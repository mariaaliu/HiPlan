<NewBoardIcon>:
    size_hint: None, None
    size: dp(160), dp(90)

<BoardScreen>:
    # screen layout
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

            # MDIconButton:

        # body
        StackLayout:  
            size_hint: 1, 0.95
            orientation: 'lr-tb'
            padding: 10, 20, 10, 20
            spacing: 16, 16
            BoardIcon:
                text: 'Board 1'
                background_normal: 'board1.png'
            BoardIcon:
                text: 'Board 2'
                background_normal: 'board2.jpg'
            BoardIcon:
                text: 'Board 3'
                background_normal: 'white.png'
                background_color: 0, 0.416, 0.583, 1
            BoardIcon:
                text: 'Board 4'
                background_normal: 'white.png'
                background_color: 0.356, 0.299, 0.344, 1
            NewBoardIcon:
                background_color: 0.321, 0.254, 0.424, 1
                background_normal: 'white.png'
                text: '+ New Board'
