#:kivy 2.0.0

<BoardIcon>:

<RecordList>:
    orientation: 'tb-lr'
    # height: self.minimum_height
    width: self.parent.width
    BoxLayout:
        orientation: 'horizontal'
        size: 0, dp(20)
        size_hint: 1, None

        Label:
            text: "List"
            color: 1, 0, 0, 1

        MDIconButton:
            icon: 'menu'

    # ScrollView:
    MDList:
        size_hint: 1, 1
        TwoLineListItem:
            text: "Two-line item"
            secondary_text: "Secondary text here"
        
        TwoLineListItem:
            text: "Two-line item"
            secondary_text: "Secondary text here"


<HomeScreen>:
    # screen layout
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

            # MDIconButton:

        # body
        StackLayout: 
            id: boards_layout 
            size_hint: 1, 0.95
            orientation: 'lr-tb'
            padding: 10, 20, 10, 20
            spacing: 16, 16

<Boardscreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

            # MDIconButton:

        # body
        ScrollView:
            do_scroll_x: True
            do_scroll_y: False

            StackLayout: 
                size_hint: 1, 0.95
                orientation: 'lr-tb'
                padding: 10, 20, 10, 20
                spacing: 16, 16
                RecordList:
