#:kivy 2.0.0

<BoardIcon>:
    size_hint: None, None
    size: dp(180), dp(90)
    # width: 200
    canvas.before: 
        Color:
            rgba: 0.321, 0.254, 0.424, 1
        
        Rectangle:
            pos: self.pos
            size: self.size

    Label:
        text_color: 0, 0, 0, 1
        text: 'board'
        pos_hint: {'top': 0.8, 'right': 0.2}


<BoardScreen>:
    # screen layout
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

            # MDIconButton:

        # body
        StackLayout:  
            size_hint: 1, 0.95
            orientation: 'lr-tb'
            padding: 10, 20, 10, 20
            spacing: 20, 20
            BoardIcon:
                text: 'board1'
                # pos_hint: {'top': 0.9, 'right': 0.3}
            BoardIcon:
                text: 'board2'
                # pos_hint: {'top': 0.9, 'right': 0.6}
            BoardIcon:
                text: 'board3'
                # pos_hint: {'top': 0.9, 'right': 0.9}
            BoardIcon:
                text: 'board4'
                # pos_hint: {'top': 0.4, 'right': 0.3}
