#:kivy 2.0.0

<BoardIcon>:

<BaseShadowWidget>:
    size_hint: None, None
    size: 100, 100
    elevation: 25
    pos_hint: {'center_x': .5}

<RecordList>:
    orientation: 'tb-lr'
    size_hint: None, None
    size_hint_x: 1
    # size_hint_y: 1
    BoxLayout:
        id: list_title
        orientation: 'horizontal'
        size: 0, dp(40)
        size_hint: 1, None
        canvas.before: 
            Color:
                rgba: 0, 0.5, 0.5, 1
            
            Rectangle:
                pos: self.pos
                size: self.size

        MDIconButton:
            icon: 'menu'

    # ScrollView:
    MDList:
        id: task_layout
        size_hint: 1, None
        canvas.before: 
            Color:
                rgba: 0.333, 0.333, 0.333, 1
            
            Rectangle:
                pos: self.pos
                size: self.size

        # MDIconButton:
        #     icon: 'plus'
        #     size_hint: 0.9, None

<HomeScreen>:
    # screen layout
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

            # MDIconButton:

        # body
        StackLayout: 
            id: boards_layout 
            size_hint: 1, 0.95
            orientation: 'lr-tb'
            padding: 10, 20, 10, 20
            spacing: 16, 16

<BoardScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1 
            size_hint_y: 0.085
            
            canvas.before: 
                Color:
                    rgba: 0.353, 0.214, 0.431, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: board_label
                text_color: 0, 0, 1, 1
        # body
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.830

            ScrollView:
                do_scroll_x: True
                do_scroll_y: False
                scroll_x: 0
                always_overscroll: True
                # viewport_size: 1, 1
                scroll_type: ['bars', 'content']
                # scroll_distance: 200*0.9
                # scroll_wheel_distance: 200*0.9

                GridLayout: 
                    id: record_layout
                    size_hint: 1, 0.95
                    size_hint_x: None
                    rows: 1
                    width: self.minimum_width
                    height: self.minimum_height
                    padding: 10, 20, 0, 20
                    spacing: 16, 16
                    col_default_width: root.width*0.9



<TaskScreen>:
    BoxLayout:
        orientation: 'vertical'
        size_hint: 1, 1

        # toolbar
        GridLayout:
            cols: 5
            cols_minimum: {0: 20, 1: 50}
            size_hint: 1, 0.085

            canvas.before: 
                Color:
                    rgba: 0.303, 0.322, 0.374, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size

            MDIconButton:
                icon: 'settings'
                size_hint_x: None
                col: 0

            MDIconButton:
                icon: 'home'
                size_hint_x: None
                col: 1
                theme_text_color: 'Custom'
                icon_color: 1, 0, 0, 1

        BoxLayout:
            orientation: 'horizontal'
            size_hint_x: 1 
            size_hint_y: 0.085
            
            canvas.before: 
                Color:
                    rgba: 0.353, 0.214, 0.431, 1
                
                Rectangle:
                    pos: self.pos
                    size: self.size
            Label:
                id: board_label
                text_color: 0, 0, 1, 1
                text: 'Task'
        # body
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, 0.830
            GridLayout:
                cols: 1
                # title: str = "No title", description: str = '', deadline: datetime = None, members: Member = None, goals: Goal = None, labels: str = None, progress_status: ProgressStatus = ProgressStatus.UNSOLVED
                MDTextFieldRound:
                    id: task_title
                    multiline: False
                    hint_text: 'Task title'
                    size_hint_y: None
                    pos_hint_y: {'top': 1} 

                MDTextFieldRound:
                    id: task_description
                    multiline: True
                    hint_text: 'Task description'
                    size_hint_y: None

                TaskDeadline:
                    id: task_deadline
                    multiline: False
                    hint_text: 'Deadline'
                    height: self.minimum_height
                    size_hint_y: None

